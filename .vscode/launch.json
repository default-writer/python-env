{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "nodemon",
            "args": ["--inspect", "--config", "./nodemon.json"],
            "runtimeExecutable": "${workspaceFolder}/start.ps1",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/app.js",
            "restart": true,
            "autoAttachChildProcesses": true,
            "trace": true,
            "outputCapture": "std",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "preLaunchTask": "",
            "postDebugTask": "kill"
        }
    ]
}